<VirtualHost *:80>
	ServerName <%= @server_name %>
	DocumentRoot /var/www/preview/<%= @document_root %>
	<Directory /var/www/preview/<%= @document_root %>>
		AuthName "<%= @auth_name %> Preview Website"
		AuthType Basic
		AuthUserFile /var/www/pw/<%= @auth_user %>
		Require valid-user
	</Directory>
</VirtualHost>
